.simple-data-table .default-table {
  tr th {
    padding: 0 !important;

    &:not(:last-child) {
      border-right: 0.1rem solid @secondaryColor !important;
    }

    &::after {
      border-bottom-color: @secondaryColor;
    }
  }

  tr td {
    &:not(:last-child) {
      border-right: 0.1rem solid @secondaryColor !important;
    }
  }
}


